<h2>Registration</h2>
<% if errors.any? %>
  <div class="errors">
    <ul>
      <% errors.each do |error| %>
        <li><%= error %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<form action="/register" method="post">
  <label>Email:</label>
  <input type="email" name="email" required>
  <label>Password:</label>
  <input type="password" name="password_digest" required>
  <input type="submit" value="Register">
</form>